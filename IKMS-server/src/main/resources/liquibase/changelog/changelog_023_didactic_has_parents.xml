<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet author="Kopec" id="changelog_023_didactic_has_parents">
        <createTable tableName="didactic_has_parents">
            <column name="didactic_material_id" type="bigint" >
                <constraints nullable="false" />
            </column>
            <column name="parent_id" type="bigint" >
                <constraints nullable="false" />
            </column>
        </createTable>

        <addPrimaryKey
                columnNames="didactic_material_id, parent_id"
                constraintName="pk_didac_has_prnt"
                tableName="didactic_has_parents"/>

        <addForeignKeyConstraint
                baseColumnNames="didactic_material_id"
                baseTableName="didactic_has_parents"
                constraintName="fk_didactic_didactic"
                referencedColumnNames="id"
                referencedTableName="didactic_materials"/>

        <addForeignKeyConstraint
                baseColumnNames="parent_id"
                baseTableName="didactic_has_parents"
                constraintName="fk_didactic_parents"
                referencedColumnNames="id"
                referencedTableName="parents"/>

        <createIndex tableName="didactic_has_parents" indexName="idx_fk_did_did3">
            <column name="didactic_material_id"></column>
        </createIndex>

        <createIndex tableName="didactic_has_parents" indexName="idx_fk_did_prnt">
            <column name="parent_id"></column>
        </createIndex>

    </changeSet>

</databaseChangeLog>