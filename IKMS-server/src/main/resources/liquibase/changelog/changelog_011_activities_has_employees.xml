<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet author="Kopec" id="changelog_011_activities_has_employees">
        <createTable tableName="activities_has_employees">
            <column name="schedule_activity_id" type="bigint" >
                <constraints nullable="false" />
            </column>
            <column name="employee_id" type="bigint" >
                <constraints nullable="false" />
            </column>
        </createTable>

        <addPrimaryKey
                columnNames="schedule_activity_id, employee_id"
                constraintName="pk_activit_has_empl"
                tableName="activities_has_employees"/>

        <addForeignKeyConstraint
                baseColumnNames="schedule_activity_id"
                baseTableName="activities_has_employees"
                constraintName="fk_activities_activities"
                referencedColumnNames="id"
                referencedTableName="schedule_activities"/>

        <addForeignKeyConstraint
                baseColumnNames="employee_id"
                baseTableName="activities_has_employees"
                constraintName="fk_activities_employees"
                referencedColumnNames="id"
                referencedTableName="employees"/>

        <createIndex tableName="activities_has_employees" indexName="idx_fk_act_act">
            <column name="schedule_activity_id"></column>
        </createIndex>

        <createIndex tableName="activities_has_employees" indexName="idx_fk_act_empl">
            <column name="employee_id"></column>
        </createIndex>

    </changeSet>

</databaseChangeLog>