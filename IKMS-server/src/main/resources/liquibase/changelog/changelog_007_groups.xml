<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet author="Kopec" id="changelog_007_groups">
        <createTable tableName="groups">
            <column name="id" type="bigint" >
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="name" type="varchar(35)" >
                <constraints nullable="false" />
            </column>
            <column name="created_date" type="date" >
                <constraints nullable="false"/>
            </column>
            <column name="active" type="boolean" >
                <constraints nullable="false" />
            </column>
            <column name="employee_id" type="bigint" >
                <constraints nullable="true" />
            </column>
        </createTable>

        <addPrimaryKey
                columnNames="id"
                constraintName="pk_groups"
                tableName="groups"/>

        <addForeignKeyConstraint
                baseColumnNames="employee_id"
                baseTableName="groups"
                constraintName="fk_empl_group"
                referencedColumnNames="id"
                referencedTableName="employees"/>

        <createIndex tableName="groups" indexName="idx_fk_empl_group">
            <column name="employee_id"/>
        </createIndex>

        <createSequence
                sequenceName="groups_seq"
                startValue="1"
                incrementBy="1"/>

    </changeSet>

</databaseChangeLog>