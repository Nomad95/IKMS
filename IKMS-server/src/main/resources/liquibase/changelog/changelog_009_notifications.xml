<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet author="Boruch" id="changelog_009_notifications">
        <createTable tableName="notifications">
            <column name="id" type="bigint" >
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="content" type="varchar(200)" >
                <constraints nullable="false"/>
            </column>
            <column name="recipient_id" type="bigint">
                <constraints nullable="false"   />
            </column>
            <column name="date_of_send" type="date">
                <constraints nullable="false"/>
            </column>
            <column name="was_read" type="boolean">
                <constraints nullable="false"/>
            </column>
            <column name="priority" type="varchar(30)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey
                columnNames="id"
                constraintName="pk_notifications"
                tableName="notifications"/>

        <addForeignKeyConstraint
                baseColumnNames="recipient_id"
                baseTableName="notifications"
                constraintName="fk_notifications"
                referencedColumnNames="id"
                referencedTableName="users"/>

        <createIndex tableName="notifications" indexName="idx_fk_notifications">
            <column name="recipient_id"></column>
        </createIndex>

        <createSequence
                sequenceName="notifications_seq"
                startValue="1"
                incrementBy="1"/>
        <loadData
                tableName="notifications"
                file="liquibase/data/notifications.csv"
        />



    </changeSet>

</databaseChangeLog>